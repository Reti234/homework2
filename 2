program MagicBall;
uses crt;

const
  Answers: array[1..20] of string = (
    'Бесспорно',
    'Предрешено',
    'Никаких сомнений',
    'Определённо да',
    'Можешь быть уверен в этом',
    'Мне кажется — да',
    'Вероятнее всего',
    'Хорошие перспективы',
    'Знаки говорят — да',
    'Да',
    'Пока не ясно, попробуй снова',
    'Спроси позже',
    'Лучше не рассказывать',
    'Сейчас нельзя предсказать',
    'Сконцентрируйся и спроси опять',
    'Даже не думай',
    'Мой ответ — нет',
    'По моим данным — нет',
    'Перспективы не очень хорошие',
    'Весьма сомнительно'
  );

var
  question: string;
  answer: string;
  randomIndex: Integer;

begin
  randomize;

  writeln('Привет! Я магический шар. Я знаю ответ на любой твой вопрос.');
  writeln('Задай мне вопрос и я дам тебе ответ. Для выхода введи "Выход".');
  writeln;

  repeat
    write('Задай вопрос: ');
    readln(question);

    if (LowerCase(question) = 'выход') then
      Break;

    randomIndex := random(20) + 1;
    answer := Answers[randomIndex];

    writeln('Магический шар говорит: ', answer);
    writeln;
  until False;

  writeln('Спасибо, что играли с магическим шаром!');
  readln;
end.
